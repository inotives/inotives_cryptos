# ===========================================================================================
# INOTIVES_CRYPTOS - Environment template
# Copy this to .env.local, .env.staging or .env.prod and fill in the values
# ===========================================================================================

# ---- APP SETTINGS -----
ENV_NAME=local
DEBUG=true
PROJECT_NAME=inotives_cryptos

# ---- POSTGRES CONNECTION ----
DB_HOST=localhost
DB_PORT=5435
DB_USER=postgres
DB_PASS=password
DB_NAME=inotives_db

# ---- DBMATE (database migrations) ----
# Format: postgres://user:password@host:port/dbname?options
DATABASE_URL="postgres://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=disable"

# ---- FASTAPI SETTINGS ----
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=generate-a-long-random-string-here

# ---- DBT SETTINGS ----
DBT_PROFILES_DIR=./analytics
DBT_TARGET=dev
DBT_SCHEMA=analytics

# ---- CRYPTO API KEYS (project specifics) ----
COINMARKETCAP_API_KEY=api_key
COINGECKO_API_KEY=api_key